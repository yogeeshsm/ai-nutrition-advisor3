    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    
    
<script>
let currentPlan = null;
let macroChart = null;
let requirementsChart = null;
let dailyCaloriesChart = null;
let dailyCostChart = null;
let mealComparisonChart = null;
let categoryChart = null;
let categoryCostChart = null;
let micronutrientRadar = null;
let mineralsTrendChart = null;

// Recommended ingredients list
const recommendedIngredients = [
    'Rice', 'Wheat Flour (Atta)', 'Moong Dal', 'Toor Dal',
    'Potato', 'Onion', 'Tomato', 'Spinach (Palak)',
    'Milk', 'Eggs', 'Cooking Oil', 'Jaggery (Gur)'
];

// Ingredient allergen/dietary data
const ingredientMetadata = {
    'Milk': { vegetarian: true, vegan: false, allergens: ['dairy'] },
    'Paneer (Cottage Cheese)': { vegetarian: true, vegan: false, allergens: ['dairy'] },
    'Curd (Yogurt)': { vegetarian: true, vegan: false, allergens: ['dairy'] },
    'Ghee (Clarified Butter)': { vegetarian: true, vegan: false, allergens: ['dairy'] },
    'Eggs': { vegetarian: false, vegan: false, allergens: ['eggs'] },
    'Chicken': { vegetarian: false, vegan: false, allergens: [] },
    'Fish': { vegetarian: false, vegan: false, allergens: ['fish'] },
    'Peanuts': { vegetarian: true, vegan: true, allergens: ['nuts'] },
    'Almonds': { vegetarian: true, vegan: true, allergens: ['nuts'] },
    'Cashews': { vegetarian: true, vegan: true, allergens: ['nuts'] },
    'Soya Chunks': { vegetarian: true, vegan: true, allergens: ['soy'] },
    'Tofu': { vegetarian: true, vegan: true, allergens: ['soy'] },
    'Wheat Flour (Atta)': { vegetarian: true, vegan: true, allergens: ['gluten'] },
    'Bread': { vegetarian: true, vegan: true, allergens: ['gluten'] },
    // All other ingredients default to vegetarian, vegan, no allergens
};

// Get ingredient metadata with defaults
function getIngredientMeta(name) {
    return ingredientMetadata[name] || { vegetarian: true, vegan: true, allergens: [] };
}

// Apply dietary and allergen filters
function applyFilters() {
    const dietary = $('#dietaryPreference').val();
    const excludeAllergens = [];
    
    // Collect checked allergens
    $('input[id^="allergen-"]:checked').each(function() {
        excludeAllergens.push($(this).val());
    });
    
    let hiddenCount = 0;
    
    // Filter ingredients
    $('.ingredient-item').each(function() {
        const checkbox = $(this).find('.ingredient-checkbox');
        const ingredientName = checkbox.data('name');
        const meta = getIngredientMeta(ingredientName);
        
        let shouldHide = false;
        
        // Apply dietary filter
        if (dietary === 'vegetarian' && !meta.vegetarian) {
            shouldHide = true;
        } else if (dietary === 'vegan' && !meta.vegan) {
            shouldHide = true;
        } else if (dietary === 'non-veg' && meta.vegetarian) {
            shouldHide = true;
        }
        
        // Apply allergen filter
        if (excludeAllergens.some(allergen => meta.allergens.includes(allergen))) {
            shouldHide = true;
        }
        
        if (shouldHide) {
            $(this).hide();
            checkbox.prop('checked', false); // Uncheck hidden items
            hiddenCount++;
        } else {
            $(this).show();
        }
    });
    
    // Update filtered count badge
    if (hiddenCount > 0) {
        $('#filteredCount').text(`${hiddenCount} hidden by filters`).show();
    } else {
        $('#filteredCount').hide();
    }
    
    updateCount();
}

// Update budget calculations
$('#numChildren, #budget').on('input', function() {
    const children = parseInt($('#numChildren').val()) || 1;
    const budget = parseFloat($('#budget').val()) || 0;
    
    const perChildWeek = budget / children;
    const perChildDay = budget / (children * 7);
    
    $('#perChildWeek').text(`‚Çπ${perChildWeek.toFixed(2)}/child/week`);
    $('#perChildDay').text(`‚Çπ${perChildDay.toFixed(2)}/child/day`);
});

// Toggle category visibility
function toggleCategory(id) {
    $(`#${id}`).slideToggle(300);
}

// Update selected count
function updateCount() {
    const count = $('.ingredient-checkbox:checked').length;
    $('#selectedCount').text(`${count} ingredients selected`);
}

// Selection functions
function selectAll() {
    $('.ingredient-checkbox:visible').prop('checked', true); // Only select visible
    updateCount();
}

function clearAll() {
    $('.ingredient-checkbox').prop('checked', false);
    updateCount();
}

function selectRecommended() {
    $('.ingredient-checkbox').each(function() {
        const name = $(this).data('name');
        $(this).prop('checked', recommendedIngredients.includes(name));
    });
    updateCount();
}

// Form submission
$('#mealPlanForm').on('submit', function(e) {
    e.preventDefault();
    
    // Get selected ingredients
    const ingredients = [];
    $('.ingredient-checkbox:checked').each(function() {
        ingredients.push($(this).data('name'));
    });
    
    if (ingredients.length < 5) {
        alert('Please select at least 5 ingredients');
        return;
    }
    
    // Prepare data
    const data = {
        num_children: parseInt($('#numChildren').val()),
        budget: parseFloat($('#budget').val()),
        age_group: $('#ageGroup').val(),
        ingredients: ingredients
    };
    
    // Show loading
    $('#loadingSpinner').addClass('active');
    $('#resultsSection').hide();
    
    // Send request
    $.ajax({
        url: '/api/generate-plan',
        method: 'POST',
        contentType: 'application/json',
        data: JSON.stringify(data),
        success: function(response) {
            currentPlan = response;
            displayResults(response);
            
            // Load QR code
            if (response.plan_id) {
                $('#qrCode').attr('src', `/api/generate-qr/${response.plan_id}`).show();
            }
            
            $('#loadingSpinner').removeClass('active');
            $('#resultsSection').show();
            $('html, body').animate({
                scrollTop: $('#resultsSection').offset().top - 100
            }, 1000);
        },
        error: function(xhr) {
            alert('Error: ' + (xhr.responseJSON?.error || 'Failed to generate meal plan'));
            $('#loadingSpinner').removeClass('active');
        }
    });
});

// Display results
function displayResults(data) {
    // Update metrics
    $('#metricCost').text(`‚Çπ${data.summary.total_cost}`);
    $('#budgetStatus').text(`${data.summary.budget_percentage}% of budget`);
    $('#metricScore').text(`${data.nutrition_score}/100`);
    
    if (data.nutrition_score >= 85) {
        $('#scoreStatus').text('Excellent');
    } else if (data.nutrition_score >= 70) {
        $('#scoreStatus').text('Good');
    } else {
        $('#scoreStatus').text('Fair');
    }
    
    $('#metricCalories').text(data.summary.daily_calories);
    $('#metricProtein').text(`${data.summary.daily_protein}g`);
    
    // Build meal plan table
    let tableHTML = '';
    const days = ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday'];
    
    days.forEach(day => {
        const dayData = data.weekly_plan[day];
        const meals = ['breakfast', 'lunch', 'snack', 'dinner'];
        
        meals.forEach(meal => {
            const mealData = dayData.meals[meal];
            mealData.items.forEach((item, idx) => {
                tableHTML += `
                    <tr>
                        ${idx === 0 ? `<td rowspan="${mealData.items.length}">${day}</td>` : ''}
                        ${idx === 0 ? `<td rowspan="${mealData.items.length}">${meal.charAt(0).toUpperCase() + meal.slice(1)}</td>` : ''}
                        <td>${item.ingredient}</td>
                        <td>${item.category}</td>
                        <td>${item.quantity_per_child_g.toFixed(1)}g</td>
                        <td>${item.total_quantity_g.toFixed(1)}g</td>
                        <td>‚Çπ${item.cost.toFixed(2)}</td>
                    </tr>
                `;
            });
        });
    });
    
    $('#mealPlanBody').html(tableHTML);
    
    // Build day tabs
    let tabsHTML = '';
    days.forEach((day, idx) => {
        tabsHTML += `
            <div class="day-tab ${idx === 0 ? 'active' : ''}" onclick="showDay('${day}')">
                ${day}
            </div>
        `;
    });
    $('#dayTabs').html(tabsHTML);
    
    // Show first day
    showDay(days[0]);
    
    // Draw charts
    drawCharts(data);
}

// Show day details
function showDay(day) {
    $('.day-tab').removeClass('active');
    $(`.day-tab:contains('${day}')`).addClass('active');
    
    const dayData = currentPlan.weekly_plan[day];
    let html = '';
    
    ['breakfast', 'lunch', 'snack', 'dinner'].forEach(meal => {
        const mealData = dayData.meals[meal];
        html += `
            <div class="mb-4">
                <h5><i class="fas fa-utensils"></i> ${meal.charAt(0).toUpperCase() + meal.slice(1)}</h5>
                <div class="alert alert-info">
                    <strong>Items:</strong> ${mealData.items.map(i => `${i.ingredient} (${i.quantity_per_child_g.toFixed(0)}g)`).join(', ')}<br>
                    <small>
                        ‚ö° ${mealData.nutrition.calories.toFixed(0)} kcal | 
                        üí™ ${mealData.nutrition.protein.toFixed(1)}g protein | 
                        üí∞ ‚Çπ${mealData.cost.toFixed(2)}
                    </small>
                </div>
            </div>
        `;
    });
    
    html += `
        <div class="alert alert-secondary">
            <strong>Daily Summary</strong><br>
            Total Cost: ‚Çπ${dayData.total_cost.toFixed(2)} | 
            Calories: ${dayData.total_nutrition.calories.toFixed(0)} | 
            Protein: ${dayData.total_nutrition.protein.toFixed(1)}g
        </div>
    `;
    
    $('#dayContent').html(html);
}

// Chart section switching
function showChartSection(section) {
    // Update buttons
    $('.btn-group button').removeClass('active');
    $(`.btn-group button[onclick="showChartSection('${section}')"]`).addClass('active');
    
    // Hide all sections
    $('.chart-section').hide();
    
    // Show selected section
    $(`#chartSection-${section}`).show();
}

// Draw all charts
function drawCharts(data) {
    const weeklyNutrition = data.weekly_nutrition;
    const days = ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday'];
    
    // 1. Macronutrient pie chart
    const macroData = {
        labels: ['Protein', 'Carbs', 'Fat'],
        datasets: [{
            data: [
                weeklyNutrition.protein * 4,
                weeklyNutrition.carbs * 4,
                weeklyNutrition.fat * 9
            ],
            backgroundColor: ['#FF6B6B', '#4ECDC4', '#FFE66D']
        }]
    };
    
    if (macroChart) macroChart.destroy();
    macroChart = new Chart(document.getElementById('macroChart'), {
        type: 'pie',
        data: macroData,
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'bottom'
                }
            }
        }
    });
    
    // Requirements bar chart
    const nutrients = ['calories', 'protein', 'carbs', 'fat', 'fiber', 'iron', 'calcium'];
    const required = nutrients.map(n => (data.daily_requirements[n] || 0) * 7);
    const achieved = nutrients.map(n => weeklyNutrition[n] || 0);
    
    const reqData = {
        labels: nutrients.map(n => n.charAt(0).toUpperCase() + n.slice(1)),
        datasets: [
            {
                label: 'Required',
                data: required,
                backgroundColor: 'rgba(78, 205, 196, 0.7)'
            },
            {
                label: 'Achieved',
                data: achieved,
                backgroundColor: 'rgba(255, 107, 107, 0.7)'
            }
        ]
    };
    
    if (requirementsChart) requirementsChart.destroy();
    requirementsChart = new Chart(document.getElementById('requirementsChart'), {
        type: 'bar',
        data: reqData,
        options: {
            responsive: true,
            scales: {
                y: {
                    beginAtZero: true
                }
            },
            plugins: {
                legend: {
                    position: 'bottom'
                }
            }
        }
    });
    
    // 2. Daily Calorie Distribution Line Chart
    const dailyCalories = days.map(day => data.weekly_plan[day].total_nutrition.calories);
    if (dailyCaloriesChart) dailyCaloriesChart.destroy();
    dailyCaloriesChart = new Chart(document.getElementById('dailyCaloriesChart'), {
        type: 'line',
        data: {
            labels: days,
            datasets: [{
                label: 'Daily Calories',
                data: dailyCalories,
                borderColor: '#FF6B6B',
                backgroundColor: 'rgba(255, 107, 107, 0.1)',
                fill: true,
                tension: 0.4
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: { display: false }
            },
            scales: {
                y: { beginAtZero: true }
            }
        }
    });
    
    // 3. Daily Cost Line Chart
    const dailyCosts = days.map(day => data.weekly_plan[day].total_cost);
    if (dailyCostChart) dailyCostChart.destroy();
    dailyCostChart = new Chart(document.getElementById('dailyCostChart'), {
        type: 'line',
        data: {
            labels: days,
            datasets: [{
                label: 'Daily Cost (‚Çπ)',
                data: dailyCosts,
                borderColor: '#4ECDC4',
                backgroundColor: 'rgba(78, 205, 196, 0.1)',
                fill: true,
                tension: 0.4
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: { display: false }
            },
            scales: {
                y: { beginAtZero: true }
            }
        }
    });
    
    // 4. Meal Comparison Grouped Bar Chart
    const mealTypes = ['breakfast', 'lunch', 'snack', 'dinner'];
    const mealData = mealTypes.map(meal => {
        return days.map(day => data.weekly_plan[day].meals[meal].nutrition.calories);
    });
    
    if (mealComparisonChart) mealComparisonChart.destroy();
    mealComparisonChart = new Chart(document.getElementById('mealComparisonChart'), {
        type: 'bar',
        data: {
            labels: days,
            datasets: mealTypes.map((meal, idx) => ({
                label: meal.charAt(0).toUpperCase() + meal.slice(1),
                data: mealData[idx],
                backgroundColor: ['#FF6B6B', '#4ECDC4', '#FFE66D', '#95E1D3'][idx]
            }))
        },
        options: {
            responsive: true,
            scales: {
                x: { stacked: false },
                y: { beginAtZero: true }
            }
        }
    });
    
    // 5. Category Distribution Doughnut Chart
    const categoryCount = {};
    days.forEach(day => {
        mealTypes.forEach(meal => {
            data.weekly_plan[day].meals[meal].items.forEach(item => {
                categoryCount[item.category] = (categoryCount[item.category] || 0) + 1;
            });
        });
    });
    
    if (categoryChart) categoryChart.destroy();
    categoryChart = new Chart(document.getElementById('categoryChart'), {
        type: 'doughnut',
        data: {
            labels: Object.keys(categoryCount),
            datasets: [{
                data: Object.values(categoryCount),
                backgroundColor: ['#FF6B6B', '#4ECDC4', '#FFE66D', '#95E1D3', '#A8E6CF', '#FFD3B6', '#FFAAA5', '#C7CEEA']
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: { position: 'right' }
            }
        }
    });
    
    // 6. Category Cost Distribution
    const categoryCost = {};
    days.forEach(day => {
        mealTypes.forEach(meal => {
            data.weekly_plan[day].meals[meal].items.forEach(item => {
                categoryCost[item.category] = (categoryCost[item.category] || 0) + item.cost;
            });
        });
    });
    
    if (categoryCostChart) categoryCostChart.destroy();
    categoryCostChart = new Chart(document.getElementById('categoryCostChart'), {
        type: 'polarArea',
        data: {
            labels: Object.keys(categoryCost),
            datasets: [{
                data: Object.values(categoryCost),
                backgroundColor: ['rgba(255, 107, 107, 0.7)', 'rgba(78, 205, 196, 0.7)', 'rgba(255, 230, 109, 0.7)', 'rgba(149, 225, 211, 0.7)', 'rgba(168, 230, 207, 0.7)', 'rgba(255, 211, 182, 0.7)']
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: { position: 'right' }
            }
        }
    });
    
    // 7. Micronutrient Radar Chart
    const microAchieved = {
        fiber: weeklyNutrition.fiber / (data.daily_requirements.fiber * 7) * 100,
        iron: weeklyNutrition.iron / (data.daily_requirements.iron * 7) * 100,
        calcium: weeklyNutrition.calcium / (data.daily_requirements.calcium * 7) * 100,
        protein: weeklyNutrition.protein / (data.daily_requirements.protein * 7) * 100,
        carbs: weeklyNutrition.carbs / (data.daily_requirements.carbs * 7) * 100,
    };
    
    if (micronutrientRadar) micronutrientRadar.destroy();
    micronutrientRadar = new Chart(document.getElementById('micronutrientRadar'), {
        type: 'radar',
        data: {
            labels: ['Fiber', 'Iron', 'Calcium', 'Protein', 'Carbs'],
            datasets: [{
                label: 'Achievement %',
                data: Object.values(microAchieved),
                backgroundColor: 'rgba(255, 107, 107, 0.2)',
                borderColor: '#FF6B6B',
                pointBackgroundColor: '#FF6B6B',
                pointBorderColor: '#fff',
                pointHoverBackgroundColor: '#fff',
                pointHoverBorderColor: '#FF6B6B'
            }]
        },
        options: {
            responsive: true,
            scales: {
                r: {
                    beginAtZero: true,
                    max: 120,
                    ticks: {
                        stepSize: 20
                    }
                }
            }
        }
    });
    
    // 8. Minerals Weekly Trend
    const mineralsByDay = days.map(day => ({
        fiber: data.weekly_plan[day].total_nutrition.fiber,
        iron: data.weekly_plan[day].total_nutrition.iron,
        calcium: data.weekly_plan[day].total_nutrition.calcium
    }));
    
    if (mineralsTrendChart) mineralsTrendChart.destroy();
    mineralsTrendChart = new Chart(document.getElementById('mineralsTrendChart'), {
        type: 'line',
        data: {
            labels: days,
            datasets: [
                {
                    label: 'Fiber (g)',
                    data: mineralsByDay.map(d => d.fiber),
                    borderColor: '#FF6B6B',
                    tension: 0.4
                },
                {
                    label: 'Iron (mg)',
                    data: mineralsByDay.map(d => d.iron),
                    borderColor: '#4ECDC4',
                    tension: 0.4
                },
                {
                    label: 'Calcium (mg)',
                    data: mineralsByDay.map(d => d.calcium / 10), // Scale down for visualization
                    borderColor: '#FFE66D',
                    tension: 0.4
                }
            ]
        },
        options: {
            responsive: true,
            scales: {
                y: { beginAtZero: true }
            }
        }
    });
}

// Export functions
function exportCSV() {
    window.location.href = '/api/export-csv';
}

function exportPDF() {
    window.location.href = '/api/export-pdf';
}

function exportJSON() {
    window.location.href = '/api/export-json';
}

function printMealPlan() {
    // Add print-specific class
    document.body.classList.add('print-mode');
    
    // Hide unnecessary elements
    const hideElements = document.querySelectorAll('.card:not(#resultsSection)');
    hideElements.forEach(el => el.style.display = 'none');
    
    // Trigger print
    window.print();
    
    // Restore after print
    setTimeout(() => {
        document.body.classList.remove('print-mode');
        hideElements.forEach(el => el.style.display = '');
    }, 1000);
}

// Initialize
$(document).ready(function() {
    updateCount();
    selectRecommended();
});
</script>

</body>
</html>